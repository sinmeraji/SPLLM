{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LLMTradeDecision",
  "type": "object",
  "properties": {
    "decision_time": { "type": "string", "format": "date-time" },
    "proposals": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "ticker": { "type": "string" },
          "action": { "type": "string", "enum": ["BUY", "SELL"] },
          "quantity": { "type": "number", "exclusiveMinimum": 0 },
          "max_price": { "type": ["number", "null"] },
          "min_price": { "type": ["number", "null"] },
          "thesis": { "type": ["string", "null"] },
          "horizon_days": { "type": ["integer", "null"], "minimum": 0 },
          "stop": { "type": ["number", "null"], "minimum": 0, "maximum": 1 },
          "take_profit": { "type": ["number", "null"], "minimum": 0, "maximum": 1 },
          "confidence": { "type": ["number", "null"], "minimum": 0, "maximum": 1 }
        },
        "required": ["ticker", "action", "quantity"],
        "additionalProperties": false
      }
    }
  },
  "required": ["decision_time", "proposals"],
  "additionalProperties": false
}
